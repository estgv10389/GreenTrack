<ContentPage
    x:Class="GreenTrack.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:GreenTrack.Components"
    Title=""
    BackgroundColor="White">
    <Grid RowDefinitions=".3*,.7*">
        <Image
            Grid.Row="0"
            Aspect="AspectFit"
            Source="dotnet_bot.png" />
        <Grid
            Grid.Row="0"
            BackgroundColor="#4F3F9B"
            Opacity=".9" />
        <Grid Grid.Row="1">
            <RoundRectangle
                Margin="-5,-30,-5,-2"
                CornerRadius="30,30,0,0"
                Fill="White" />
            <VerticalStackLayout Margin="30,0,30,0">
                <Label
                    FontAttributes="Bold"
                    FontFamily="LatoBold"
                    FontSize="Medium"
                    Text="Welcome!"
                    TextColor="#2D2D2D" />
                <Label
                    FontFamily="LatoB"
                    Text="Log in to continue"
                    TextColor="#A3A3A4" />
                <Grid
                    Margin="0,30,0,0"
                    ColumnDefinitions="Auto, *"
                    HeightRequest="60">
                    <Grid Grid.Column="0" VerticalOptions="Center">
                        <RoundRectangle
                            BackgroundColor="#EDEBF6"
                            CornerRadius="10"
                            HeightRequest="50"
                            VerticalOptions="Center"
                            WidthRequest="50" />
                        <Image HorizontalOptions="Center" VerticalOptions="Center">
                            <Image.Source>
                                <FontImageSource
                                    FontFamily="Awesome"
                                    Glyph="&#xf0e0;"
                                    Size="30"
                                    Color="#4F3F9B" />
                            </Image.Source>
                        </Image>
                    </Grid>
                    <components:GTInput
                        Grid.Column="1"
                        GTAutomationId="GTEmail"
                        HasValidationError="{Binding EmailHasValidationError}"
                        HorizontalOptions="FillAndExpand"
                        IsPassword="False"
                        Placeholder="Email"
                        Text="{Binding Email}"
                        ValidationMessage="{Binding EmailValidationMessage}"
                        VerticalOptions="Center" />
                </Grid>
                <Grid
                    Margin="0,30,0,30"
                    ColumnDefinitions="Auto, *"
                    HeightRequest="60">
                    <Grid Grid.Column="0" VerticalOptions="Center">
                        <RoundRectangle
                            BackgroundColor="#EDEBF6"
                            CornerRadius="10"
                            HeightRequest="50"
                            VerticalOptions="Center"
                            WidthRequest="50" />
                        <Image HorizontalOptions="Center" VerticalOptions="Center">
                            <Image.Source>
                                <FontImageSource
                                    FontFamily="Awesome"
                                    Glyph="&#xf023;"
                                    Size="30"
                                    Color="#4F3F9B" />
                            </Image.Source>
                        </Image>
                    </Grid>
                    <components:GTInput
                        x:Name="GTPassword"
                        Grid.Column="1"
                        GTAutomationId="GTPassword"
                        HasValidationError="{Binding PasswordHasValidationError}"
                        HorizontalOptions="FillAndExpand"
                        IsPassword="true"
                        Placeholder="Password"
                        Text="{Binding Password}"
                        ValidationMessage="{Binding PasswordValidationMessage}"
                        VerticalOptions="Center" />
                </Grid>
                <components:GTButton
                    x:Name="GTLogin"
                    Margin="0,0,0,20"
                    BgColor="#4F3F9B"
                    ExternalCommand="{Binding LoginCommand}"
                    GTAutomationId="GTLogin"
                    Text="Log in" />
                <Label
                    Margin="0,20,0,-10"
                    HorizontalOptions="Center"
                    Text="Forgot your password?"
                    TextColor="Blue"
                    TextDecorations="Underline" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
