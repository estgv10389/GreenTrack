<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="GreenTrack.Components.GTButton"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GreenTrack.Components">
    <ContentView.Content>
        <Button
            AutomationId="{Binding GTAutomationId, Source={RelativeSource AncestorType={x:Type local:GTButton}}}"
            BackgroundColor="{Binding BgColor, Source={RelativeSource AncestorType={x:Type local:GTButton}}}"
            Command="{Binding ExternalCommand, Source={RelativeSource AncestorType={x:Type local:GTButton}}}"
            Text="{Binding Text, Source={RelativeSource AncestorType={x:Type local:GTButton}}}" />
    </ContentView.Content>
</ContentView>
