<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="GreenTrack.Components.GTEditor"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GreenTrack.Components">
    <ContentView.Content>
        <Editor
            AutoSize="TextChanges"
            AutomationId="{Binding GTAutomationId, Source={RelativeSource AncestorType={x:Type local:GTEditor}}}"
            HeightRequest="150"
            Placeholder="{Binding Placeholder}"
            Text="{Binding Text}" />
    </ContentView.Content>
</ContentView>
